<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegistrationActivity"
    android:background="#FFEB3B"
    tools:ignore="ExtraText"> <!-- Background color similar to the LoginActivity -->

    <!-- LinearLayout with Gradient Background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_bg"
        android:padding="24dp"
        android:gravity="center"> <!-- Center the content -->

        <!-- Name EditText -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Name"
            android:padding="12dp"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"
            android:textColorHint="#4CAF50"
            android:background="@android:drawable/edit_text"
            tools:ignore="MissingConstraints" />

        <!-- Email EditText -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Email"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"
            android:textColorHint="#4CAF50"
            android:background="@android:drawable/edit_text"
            tools:ignore="MissingConstraints" />

        <!-- Password EditText -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"
            android:textColorHint="#4CAF50"
            android:background="@android:drawable/edit_text"
            tools:ignore="MissingConstraints" />

        <!-- Register Button with Improved Contrast -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:background="#1B5E20"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="#1976D2"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
